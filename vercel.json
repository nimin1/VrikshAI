{
  "buildCommand": "cd web && npm install && npm run build",
  "outputDirectory": "web/build",
  "installCommand": "cd web && npm install",
  "devCommand": "cd web && npm start",
  "framework": "create-react-app",
  "rewrites": [
    {
      "source": "/api/darshan",
      "destination": "/api/darshan.py"
    },
    {
      "source": "/api/chikitsa",
      "destination": "/api/chikitsa.py"
    },
    {
      "source": "/api/seva",
      "destination": "/api/seva.py"
    },
    {
      "source": "/api/vana",
      "destination": "/api/vana.py"
    },
    {
      "source": "/api/auth/:path*",
      "destination": "/api/auth.py"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.py": {
      "maxDuration": 30,
      "memory": 1024
    }
  }
}
