{
  "rewrites": [
    {
      "source": "/api/darshan",
      "destination": "/api/darshan.py"
    },
    {
      "source": "/api/chikitsa",
      "destination": "/api/chikitsa.py"
    },
    {
      "source": "/api/seva",
      "destination": "/api/seva.py"
    },
    {
      "source": "/api/vana",
      "destination": "/api/vana.py"
    },
    {
      "source": "/api/auth/:path*",
      "destination": "/api/auth.py"
    }
  ],
  "functions": {
    "api/**/*.py": {
      "maxDuration": 30,
      "memory": 1024
    }
  }
}
